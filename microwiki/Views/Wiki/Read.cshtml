@model ReadViewModel

@{ 
    var buttonClasses = "btn btn-default btn-block btn-xs";
}

@section title {
    <title>@Model.Title</title>
}

@{
    await Html.RenderPartialAsync("_BreadcrumbTrail", Model.BreadcrumbTrailViewModel); 
}

<div class="row">
    <div class="col-sm-9">
        <h1>@Model.Title</h1>

        @Html.Raw(Model.Body)

        @if (Model.IsTableOfContents && Model.Children.Count() > 0)
        {
            <ul class="toc">
                @foreach (var child in Model.Children)
                {
                    <li><a href="@child.Location">@child.Title</a> &raquo;</li>
                }
            </ul>
        }
        <p class="document-meta-data">Created on @Model.Created.ToString("dd/MM/yyyy HH:mm") | Last update @Model.Updated.ToString("dd/MM/yyyy HH:mm") by @Model.Username</p>
    </div>
    <div class="col-sm-3">
        <h1>Actions</h1>
        <p>@Html.ActionLink("Edit This Page", "Update", new { id = Model.ID }, new { @class = buttonClasses })</p>

        @if (!Model.IsRootDocument)
        {
            <p>
                <a id="move-document-button" href="#move-document-modal" data-id="@Model.ID" data-title="@Model.Title" class="@buttonClasses">Move This Page</a>
            </p>
        }

        <p>@Html.ActionLink("Add A New Child Page", "Create", new { parentID = Model.ID }, new { @class = buttonClasses })</p>

        @if (!Model.IsRootDocument)
        {
            using (Html.BeginForm("Delete", "Wiki", FormMethod.Post))
            {
                <p>
                    @Html.HiddenFor(x => x.ID)
                    <button class="btn btn-default btn-block btn-xs delete-page">Delete This Page</button>
                </p>
            }
        }

        @if (!Model.IsTableOfContents && Model.Children.Count() > 0)
        {
            <h1>Child Pages</h1>
            <ul class="child-pages">
                @foreach (var child in Model.Children)
                {
                    <li><a href="@child.Location">@child.Title</a></li>
                }
            </ul>
        }
    </div>
</div>

<div class="modal" id="move-document-modal" tabindex="-1" role="dialog"></div>
