@model microwiki.Models.UploadViewModel

@{
    ViewBag.Title = "Upload Image";
}

<h1>Upload File</h1>

@using (Html.BeginForm("Upload", "Wiki", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.UploadedFile)
        <input type="file" name="UploadedFile">
    </div>

    <div class="form-group form-group-submit">
        <input type="submit" class="btn btn-primary" value="Upload File">
    </div>
}

@if (Model.UploadedFileName != null)
{
    <p>Uploaded File Name: <strong>@Model.UploadedFileName</strong></p>
}

<div class="upload-thumbnails">
    @if (Model.Files != null && Model.Files.Length > 0)
    {
        foreach (var file in Model.Files)
        {
            var extension = Path.GetExtension(file).ToLower();
            var isImage = (extension == ".jpg" || extension == ".png" || extension == ".gif" || extension == ".jpeg");

            <div class="row">
                <div class="col-md-1">
                    @if (isImage)
                    {
                        <a href="/UserContent/@Path.GetFileName(file)" class="thumbnail" target="_blank">
                            <img src="~/UserContent/@Path.GetFileName(file)" />
                        </a>
                    }
                    else
                    {
                        <a href="/UserContent/@Path.GetFileName(file)" class="thumbnail file" target="_blank">
                            <span class="glyphicon glyphicon-file"></span>
                        </a>
                    }
                </div>
                <div class="col-md-10">
                    <strong>/UserContent/@Path.GetFileName(file)</strong>
                </div>
                <div class="col-md-1">
                    @using(Html.BeginForm("DeleteUpload", "Wiki", FormMethod.Post))
                    {
                        <input type="hidden" name="Path" value="/UserContent/@Path.GetFileName(file)"/>
                        <input type="submit" value="Delete" class="btn btn-default" />
                    }
                </div>
            </div>
        }
    }
</div>