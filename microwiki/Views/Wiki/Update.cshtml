@model microwiki.Models.DocumentUpdateViewModel

@{
    ViewBag.Title = "Update " + Model.Title;
}

<h1>Update @Model.Title</h1>

<p>Authenticated as @User.Identity.Name</p>

@using (Html.BeginForm("Update", "Wiki", FormMethod.Post, new object {  }))
{
    <p>@Html.TextBoxFor(x => x.Title)</p>
    
    if (Model.IsRoot)
    {
        @Html.HiddenFor(x => x.Slug)
    }
    else
    {
        <p>@Html.TextBoxFor(x => x.Slug)</p>
    }

    <div class="wmd-panel">
        <div id="wmd-button-bar"></div>
        @Html.TextAreaFor(x => x.Body, new { id = "wmd-input", @class = "wmd-input" })
    </div>
    <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
    
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.IsRoot)
    @Html.HiddenFor(x => x.ParentID)
 
    <p><input type="submit" value="Save"></p>
}