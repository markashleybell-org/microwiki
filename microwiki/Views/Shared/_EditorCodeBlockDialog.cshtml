@{ Layout = null; }

<div class="modal" tabindex="-1" role="dialog" id="editor-code-block-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add/Update Code Block</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2 row">
                    <label for="code-block-language" class="col-sm-2 col-form-label">Language</label>
                    <div class="col-sm-10">
                        <select id="code-block-language" name="code-block-language" class="form-select">
                            <option value="">Plain Text</option>
                            <option value="cs">C#</option>
                            <option value="sql">SQL</option>
                            <option value="ts">TypeScript</option>
                            <option value="js">JavaScript</option>
                            <option value="css">CSS</option>
                            <option value="xml">XML</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Update Code Block</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
