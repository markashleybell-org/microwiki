@model BreadcrumbTrailViewModel

@{ Layout = null; }

<div class="row">
    <div class="col mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @foreach (var segment in Model.Segments)
                {
                    <li class="breadcrumb-item">
                        @if (segment.ReadOnly)
                        {
                            <span class="breadcrumb-readonly">@segment.Title</span>
                        }
                        else
                        {
                            <a href="@segment.Location">@segment.Title</a>
                        }
                    </li>
                }
            </ol>
        </nav>
    </div>
</div>
