@{ Layout = null; }

<div class="modal" tabindex="-1" role="dialog" id="editor-link-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add/Update Link</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2 row">
                    <label for="link-text" class="col-sm-2 col-form-label">Text</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="link-text" name="link-text" placeholder="The text for the hyperlink" value="">
                    </div>
                </div>
                <div class="mb-2 row">
                    <label for="link-url" class="col-sm-2 col-form-label">Url</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="link-url" name="link-url" placeholder="The URL to link to" value="">
                    </div>
                </div>
                <div class="mb-2 row">
                    <label for="link-title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="link-title" name="link-title" placeholder="A title for the link (optional)" value="">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger">Remove Link</button>
                <button type="button" class="btn btn-success">Update Link</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
